<persistence xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
   version="1.0">
 
   <persistence-unit name="dt340a">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>java:/mySQL</jta-data-source>
      <class>entities.CallFailure</class>
      <class>entities.EventCause</class>
      <class>entities.EventCausePK</class>
      <class>entities.FailureClass</class>
      <class>entities.InvalidCallFailure</class>
      <class>entities.MccMnc</class>
      <class>entities.MccMncPK</class>
      <class>entities.UEType</class>
      <class>entities.User</class>
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
         <property name="hibernate.hbm2ddl.auto" value="update" />
         <!-- <property name="hibernate.hbm2ddl.auto" value="create"/> -->  
      </properties>
   </persistence-unit>
</persistence>